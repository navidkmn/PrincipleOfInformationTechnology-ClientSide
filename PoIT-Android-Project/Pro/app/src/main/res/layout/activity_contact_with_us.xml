<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.navid.androidproject.Activity.ContactWithUsActivity"
    android:background="@color/primary">

    <ImageView
        android:id="@+id/backFromContactWithUs"
        android:layout_width="20dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/backarrow"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="16dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:id="@+id/phoneCall"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:srcCompat="@drawable/phonecall"
        android:layout_below="@+id/backFromContactWithUs"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp" />

    <ImageView
        android:id="@+id/email"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:srcCompat="@drawable/mail"
        android:layout_marginTop="104dp"
        android:layout_below="@+id/phoneCall"
        android:layout_alignStart="@+id/phoneCall" />

    <ImageView
        android:id="@+id/telegam"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:srcCompat="@drawable/telegram"
        android:layout_below="@+id/email"
        android:layout_alignStart="@+id/email"
        android:layout_marginTop="88dp" />

</RelativeLayout>
