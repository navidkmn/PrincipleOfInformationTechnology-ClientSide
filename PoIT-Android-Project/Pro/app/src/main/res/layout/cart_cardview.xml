<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    android:layout_marginBottom="2dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        app:cardBackgroundColor="@color/white">

        <ImageView
            android:id="@+id/imgProduct"
            android:layout_width="150dp"
            android:layout_height="170dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="5dp"
            android:background="@color/white" />

        <ImageView
            android:id="@+id/deleteProduct"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_margin="5dp"
            app:srcCompat="@drawable/close" />

        <TextView
            android:id="@+id/nameProduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imgProduct"
            android:layout_marginTop="5dp"
            android:layout_toStartOf="@+id/imgProduct"
            android:textColor="@color/jet" />

        <TextView
            android:id="@+id/priceProduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nameProduct"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_toStartOf="@+id/imgProduct"
            android:textColor="@color/jet" />

        <TextView
            android:id="@+id/storeProduct"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/priceProduct"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_toStartOf="@+id/imgProduct"
            android:textColor="@color/jet" />

        <RelativeLayout
            android:id="@+id/quantityRL"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_below="@+id/storeProduct"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_toStartOf="@+id/imgProduct"
            android:background="@color/primary">

            <ImageView
                android:id="@+id/addProduct"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_margin="5dp"
                app:srcCompat="@drawable/plus" />

            <TextView
                android:id="@+id/quantityProduct"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/white" />

            <ImageView
                android:id="@+id/removeProduct"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                app:srcCompat="@drawable/minus" />
        </RelativeLayout>

        />
    </RelativeLayout>

</android.support.v7.widget.CardView>
